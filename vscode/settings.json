{
    // base editor settings
    "editor.fontSize": 13.75,
    "editor.fontFamily": "FiraMonoNFM-Regular",
    //"editor.fontFamily": "JetBrainsMonoNFM-Light",
    //"editor.fontFamily": "Fira Code Light",
    //"editor.renderWhitespace": "all",
    "editor.bracketPairColorization.enabled": false,
    "editor.cursorStyle": "block-outline",
    "editor.cursorBlinking": "solid",
    "editor.fontLigatures": "all",
    "editor.lineHeight": 2.2,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.formatOnSave": true,
    "window.zoomLevel": 0.2,
    "workbench.activityBar.location": "top",
    "workbench.iconTheme": "helium-icon-theme",
    "workbench.colorTheme": "material-festoon",
    "workbench.productIconTheme": "developer-icons",
    "workbench.list.smoothScrolling": true,
    // terminal
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.8,
    "terminal.integrated.inheritEnv": false,
    "terminal.external.osxExec": "Alacritty.app",
    "terminal.explorerKind": "external",
    // python
    "[python]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}"
    ],
    "autoDocstring.docstringFormat": "numpy",
    // dockerfile
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    // go
    "go.toolsManagement.autoUpdate": true,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.go$",
                "cmd": "golines ${file} -w -m 81"
            }
        ]
    },
    // Misc
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    //
    "security.workspace.trust.untrustedFiles": "open",
    "extensions.ignoreRecommendations": true,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "workbench.layoutControl.enabled": false,
    "window.zoomPerWindow": false,
}